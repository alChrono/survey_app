<p id="notice"><%= notice %></p>

<h1>Listing Survey Questions</h1>

<table>
  <thead>
    <tr>
      <th>Survey</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.survey.name unless test.survey.nil? %></td>
        <td><%= test.question.question unless test.question.nil? %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Survey List', surveys_path %>
<%= link_to 'Questions List', questions_path %>
<%= link_to 'Survey Question List', tests_path %>
<%= link_to 'New Survey Name', new_survey_path %>
<%= link_to 'New Question', new_question_path %>
